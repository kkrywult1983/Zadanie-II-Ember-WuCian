{{#if @multipleType}}

  <PowerSelectMultiple
    class='flex-fill'
    @searchField='username'
    @selected={{@selected}}
    @options={{this.options}}
    @onChange={{@onChange}}
    as |author|
  >
    {{author.username}}
  </PowerSelectMultiple>

{{else}}

  <PowerSelectMultiple
    class='flex-fill'
    @searchField='username'
    @selected={{@selected}}
    @options={{this.options}}
    @onChange={{@onChange}}
    as |author|
  >
    {{author.username}}
  </PowerSelectMultiple>

{{/if}}