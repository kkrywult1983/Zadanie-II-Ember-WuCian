{{page-title 'Posts'}}
<Header>Posts</Header>
<div>
  <label>
    Start date:
    <PikadayInput
      @maxDate={{this.maxDate}}
      @format='YYYY-MM-DD'
      @value={{this.dateFrom}}
      @onSelection={{this.onStartDateChange}}
    />
  </label>
  <label>
    End date:
    <PikadayInput
      @minDate={{this.minDate}}
      @format='YYYY-MM-DD'
      @value={{this.dateTo}}
      @onSelection={{this.onEndDateChange}}
    />
  </label>
  <button
    type='button'
    class='btn btn-danger'
    {{on 'click' this.clearFilters}}
  >Clear</button>
  <button
    type='button'
    class='btn btn-secondary'
    {{on 'click' this.onSortToggle}}
  >Sort {{this.sortLabel}}</button>
</div>
<Posts::List @posts={{this.sortedPosts}} />
<Post::Create />
{{outlet}}